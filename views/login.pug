extends layout

block content
  div.container-fluid.border-primary.mt-5
    div.row
      div.card.w-50.mx-auto
        div.card-body
          form(role="form",action="/login",method="post")
            div.form-group
              div.input-group
                div.input-group-prepend
                  span.input-group-text
                    i.fa.fa-user
                input.form-control.input-lg(type="text",placeholder="username",name="username")
            div.form-group
              div.input-group
                div.input-group-prepend
                  span.input-group-text
                    i.fa.fa-key
                input.form-control.input-lg(type="password",placeholder="password",name="password")
            div.form-group
              div.form-check
                input.form-check-input#remember_me(name="remember_me",type="checkbox",value="Remember Me",aria-label="Remember Me")
                label.form-check-label(for="remember") Remember Me
            div.form-group
              input.form-control.btn.btn-lg.btn-success.btn-block(type="submit",value="login")

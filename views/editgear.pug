extends layout

block navbarcontext
  li.nav-item.active
    a.nav-link(href="/user") Gear List
    

block content
  div.container-fluid
    div.row
      table.table.table-sm
        thead
          tr
            th(style="display:none") id
            th
            th Property
            th Value
            th Select
        tbody
          each property in result
            tr
              td(style="display:none")= property.id
              td
                i(class=property.GearTemplate.icon)
              td= property.GearTemplate.property 
              td= property.value 
              td
                button.btn.btn-sm update
                  
  
